package com.user.in.service.impl;

import java.util.List;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;

import com.user.in.modal.User;
import com.user.in.repository.UserRespository;
import com.user.in.service.UserService;

public class UserServiceImpl implements UserService {
	
	static final Logger log = LoggerFactory.getLogger(UserServiceImpl.class); 
	
	@Autowired
	UserRespository userRepository;

	@Override
	public User saveUser(User user) {
		log.info("User is Creation Started");
		User userResponse = userRepository.save(user);
		log.info("User is Saved");
		return userResponse;
	}

	@Override
	public List<User> fetchAllUser() {
		log.info("User is Creation Started");
		return userRepository.findAll();
	}

	@Override
	public User fetchByUserId(Long id) {
		return userRepository.findByUserId(id).get();
	}

}