package com.user.in.controller;

import java.util.List;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import com.user.in.modal.User;
import com.user.in.service.UserService;

@RestController
@RequestMapping("/user")
public class UserController {
	
	final Logger log = LoggerFactory.getLogger(UserController.class);
	
	@Autowired
	UserService userService;

	@PostMapping("/save")
	public String saveUser(@RequestBody User user) {
		log.info("Save User");
		User userResponse = userService.saveUser(user);
		return userResponse.toString();
	}
	
	@GetMapping("/list")
	public List<User> fetchAllUser(){
		log.info("Fetch All User Start");
		List<User> userResponse = userService.fetchAllUser();
		log.info("Fetch All User Done");
		return userResponse;
	}
	
	@GetMapping("/{id}")
	public String getUserById(@RequestParam Long Id) {
		log.info("Fetch User By Id Start");
		List<User> userResponse = userService.fetchAllUser();
		log.info("Fetch User By Id Done");
		return null;
	}

}